{{#each articles}}
<div class="col-10">
  <a href="{{ this.link }}" target="_blank">{{ this.title }}</a>
</div>
<div class="col-2">
  <button data-id="{{ this.id }}" data-title="{{ this.title }}" data-link="{{ this.link }}" class="btn btn-sm btn-success float-right mb-1 pl-3 pr-3 add-note" data-toggle="modal" data-target="#noteModal">Article Notes</button>

  <button data-id="{{ this.id }}" data-title="{{ this.title }}" data-link="{{ this.link }}" class="btn btn-sm btn-danger float-right delete-btn">&nbsp;Delete Article&nbsp;</button>
</div>
{{/each}}

<!-- Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Some Notes!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body pr-5 pl-5">
        <div class="row saved-notes mb-4 p-3 border">
          <div class="col-12"><h6><strong>Saved Notes</strong></h6></div>
          <div class="col-10"></div>
          <div class="col-2">
            <button class="btn btn-danger btn-sm">O</button>
          </div>
        </div>
        <form>
				  <div class="form-group">
				    <input type="text" class="form-control" id="note-title" placeholder="Title">
				  </div>

				  <div class="form-group">
				    <textarea class="form-control" id="note-body" rows="3"></textarea>
				  </div>
				</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success save-note" data-dismiss="modal">Save Some Notes!</button>
      </div>
    </div>
  </div>
</div>
